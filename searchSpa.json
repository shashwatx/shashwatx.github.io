---
layout: none
---
[
    {% assign firstEntry = true %}
    {% for post in site.posts %}
        {% if post.type == "" or post.type == nil %}
            {% if post.spice == "" or post.spice == nil %}
                {% if firstEntry  == false %},{% endif %}
                {% if firstEntry  == true %}
                    {% assign firstEntry = false %}
                {% endif %}

                {
                "title"    : "{{ post.title | escape }}",
                "url"      : "{{ site.baseurl }}{{ post.url }}",
                "date"     : "{{ post.date }}"
                }
        {% endif %}
        {% endif %}
	{% endfor %}
]
